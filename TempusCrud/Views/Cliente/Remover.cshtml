@model ClienteModel
@{
    ViewData["Title"] = "Remover cliente";
}

<div class="text-center">

    <h3>Deseja apagar o cliente (@Model.Nome)?</h3>
</div>

<a class="btn btn-primary btn-block" role="button" asp-controller="Cliente" asp-action="Index">Cancelar exclusão</a>
<a class="btn btn-danger btn-block" role="button" asp-route-id="@Model.Id" asp-controller="Cliente" asp-action="RemoverCliente">Confirmar exclusão</a>