@model ClienteModel
@{
    ViewData["Title"] = "Editar cliente";
}

<div class="text-center">

    <h1 class="display-4">Editar clientes</h1>


</div>

<form asp-controller="Cliente" asp-action="Alterar" method="post">

    <input type="hidden" asp-for="Id"/>

    <div class="form-group">
        <label for="nome">Nome</label>
        <input type="text" asp-for="Nome" class="form-control" placeholder="Digite o nome do cliente">
    </div>

    <div class="form-group">
        <label for="cpf">Cpf</label>
        <input type="text" asp-for="Cpf" class="form-control" placeholder="Digite o CPF do cliente">
    </div>

    <div class="form-group">
        <label for="nascimento">Data de nascimento</label>
        <input type="date" asp-for="DataNascimento" class="form-control" placeholder="Digite a data de nascimento do cliente">
    </div>

    <div class="form-group">
        <label for="cadastro">Data de cadastro</label>
        <input type="date" asp-for="DataCadastro" class="form-control" placeholder="Digite a data de cadastro do cliente">
    </div>

    <div class="form-group">
        <label for="renda">Renda familiar</label>
        <input type="text" asp-for="RendaFamiliar" class="form-control" placeholder="Digite a renda familiar do cliente">
    </div>

    <button type="submit" class="btn btn-primary">Alterar</button>
    <a class="btn btn-secondary" asp-controller="Cliente" asp-action="Index" role="button">Voltar</a>
</form>
